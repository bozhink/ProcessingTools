@using ProcessingTools.Web.Documents.Areas.JournalsManagment.Controllers

@model IEnumerable<ProcessingTools.Web.Documents.Areas.JournalsManagment.ViewModels.PublisherViewModel>

@{
    ViewBag.Title = nameof(PublishersController.Index);
}

<h2>
    @nameof(PublishersController.Index)
</h2>

<p>
    @Html.ActionLink("Create New", nameof(PublishersController.Create))
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AbbreviatedName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateCreated)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateModified)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AbbreviatedName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateCreated)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateModified)
            </td>
            <td>
                @Html.ActionLink("Edit", nameof(PublishersController.Edit), new { id = item.Id }) |
                @Html.ActionLink("Details", nameof(PublishersController.Details), new { id = item.Id }) |
                @Html.ActionLink("Delete", nameof(PublishersController.Delete), new { id = item.Id })
            </td>
        </tr>
    }
</table>
