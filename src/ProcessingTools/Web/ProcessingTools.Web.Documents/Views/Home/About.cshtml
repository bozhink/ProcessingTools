@inject Microsoft.AspNetCore.Hosting.IHostingEnvironment hostingEnvironment
@{
    ViewData[ContextKeys.Title] = "About";
}

<section role="main" class="container">
    <header>
        <h2>@ViewData[ContextKeys.Title]</h2>
        <h3>Tools for layout editing and bio-semantic tagging</h3>
    </header>

    <address>
        <strong>Home page:</strong> <a href="https://github.com/bozhink/ProcessingTools" target="_blank">ProcessingTools in GitHub</a><br />
        <strong>Documentation:</strong> <a href="https://github.com/bozhink/ProcessingTools/wiki" target="_blank">
            Wiki
        </a><br />
        <strong>Issues:</strong> <a href="https://github.com/bozhink/ProcessingTools/issues" target="_blank">Issues in GitHub</a>
    </address>

    @if (hostingEnvironment.EnvironmentName != "Production")
    {
        <hr />
        <footer>
            <p><strong>APPLICATION_NAME:</strong> @hostingEnvironment.ApplicationName</p>
            <p><strong>APPLICATION_VERSION:</strong> @(typeof(Startup).Assembly.GetName().Version)</p>
            <p><strong>ASPNETCORE_ENVIRONMENT:</strong> @hostingEnvironment.EnvironmentName</p>
        </footer>
    }
    else
    {
        <hr />
        <footer>
            <p><small>ProcessingTools.Web.Documents v@(typeof(Startup).Assembly.GetName().Version)</small></p>
        </footer>
    }
</section>
