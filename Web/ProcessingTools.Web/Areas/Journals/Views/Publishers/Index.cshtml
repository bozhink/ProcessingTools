@using ProcessingTools.Web.Areas.Journals.Controllers
@using ProcessingTools.Web.Areas.Journals.ViewModels.Publishers
@model IEnumerable<PublisherViewModel>

@{
    this.ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", PublishersController.CreateActionName)
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AbbreviatedName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateCreated)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateModified)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AbbreviatedName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateCreated)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateModified)
            </td>
            <td>
                @Html.ActionLink("Edit", PublishersController.EditActionName, new { id = item.Id }) |
                @Html.ActionLink("Details", PublishersController.DetailsActionName, new { id = item.Id }) |
                @Html.ActionLink("Delete", PublishersController.DeleteActionName, new { id = item.Id })
            </td>
        </tr>
    }

</table>
