@using ProcessingTools.Web.Areas.Journals.Controllers
@using ProcessingTools.Web.Areas.Journals.ViewModels.Publishers
@using Strings = ProcessingTools.Web.Resources.Areas.Journals.Views.Publishers.Strings
@model PublisherViewModel
<section role="main">
    <header>
        <h2>@this.ViewBag.Title</h2>
        <h3>@Strings.DeleteMessage</h3>
    </header>
    <div>
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Name)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Name)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.AbbreviatedName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.AbbreviatedName)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.DateCreated)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DateCreated)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.DateModified)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DateModified)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.CreatedByUser)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.CreatedByUser)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.ModifiedByUser)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ModifiedByUser)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="form-actions no-color">
                <input type="submit" value="@Strings.DeleteButtonText" class="btn btn-danger" />
                @Html.ActionLink(Strings.CancelButtonText, PublishersController.IndexActionName, routeValues: null, htmlAttributes: new { @class = "btn btn-default" })
            </div>
        }
    </div>
    <footer>
        <nav>
            <ul class="navigation">
                <li>
                    @Html.ActionLink(Strings.BackActionLinkText, PublishersController.IndexActionName)
                </li>
            </ul>
        </nav>
    </footer>
</section>