@model ProcessingTools.Web.Documents.Areas.BioTaxonomyData.ViewModels.BiotaxonomicBlackList.BlackListItemsViewModel

@{
    ViewBag.Title = "Black List";
    var anchorTag = Html.ActionLink("Search", nameof(BiotaxonomicBlackListController.Search)).ToHtmlString();
    var searchUrl = System.Text.RegularExpressions.Regex.Replace(anchorTag, @".*?href=""([^""<>]+)"".*", "$1");
}

@Styles.Render(BundleNames.BiotaxonomicBlackListStyleBundleName)
@Scripts.Render(BundleNames.AngularScriptBundleName)
@Scripts.Render(BundleNames.BiotaxonomicBlackListStyleBundleName)

<header>
    <h2>Black List</h2>
</header>

<div ng-app="biotaxonomicblacklistApp">
    <div ng-controller="BiotaxonomicBlackListController as blackList">
        <div class="contols">
            <div class="form-group">
                <fieldset>
                    <legend>Add black-list items</legend>
                    <form ng-submit="blackList.addItem()" class="form-horizontal">
                        <textarea ng-model="blackList.textArea"
                                  name="taxa"
                                  cols="30"
                                  rows="4"
                                  placeholder="add black-list items here"
                                  class="form-control"></textarea>
                        <input class="btn btn-primary" type="submit" value="add" />
                    </form>
                </fieldset>
            </div>

            <div class="form-group">
                <fieldset>
                    <legend>Search black-list item</legend>
                    <form ng-submit="blackList.search('@searchUrl')" class="form-horizontal">
                        <input ng-model="blackList.searchString"
                               type="text"
                               size="30"
                               placeholder="input black-list item to search here"
                               class="form-control"
                               pattern=".+" />
                        <input class="btn btn-primary" type="submit" value="search" />
                    </form>
                </fieldset>
            </div>
        </div>

        <div class="form-group" ng-if="blackList.items.length">
            <fieldset>
                <legend>Black-list items</legend>
                @using (Html.BeginForm())
                {
                    <ul class="taxon-list">
                        <li ng-repeat="item in blackList.items | orderBy: 'content'">
                            <input type="hidden"
                                   name="@(nameof(Model.Items)).Index"
                                   value="{{item.id}}" />
                            <input type="text"
                                   name="@(nameof(Model.Items))[{{item.id}}].TaxonName"
                                   value="{{item.content}}"
                                   readonly="readonly"
                                   class="taxon-name" />
                            <span ng-click="blackList.removeItem(item.id)"
                                  class="glyphicon glyphicon-remove remove-button"
                                  title="Remove"></span>
                        </li>
                    </ul>

                    <div class="form-group">
                        <span ng-click="blackList.clearList()" class="btn btn-default">Clear List</span>
                        <input type="submit" value="Submit" class="btn btn-default" />
                    </div>
                }
            </fieldset>
        </div>
    </div>
</div>

<div class="clearfix"></div>

