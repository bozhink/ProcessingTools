@model string

@{
    ViewData[ContextKeys.Title] = "Send message to the Queue";
}

@section Styles {
    <link href="~/lib/toastr/build/toastr.min.css" rel="stylesheet" />
}

<section role="main">
    <header>
        <h2>@ViewData[ContextKeys.Title]</h2>
    </header>
    <form method="post" class="container">
        @Html.AntiForgeryToken()
        @Html.ValidationSummary()
        <div class="form-group row">
            <div class="col-12">
                <textarea type="text" id="message" name="message" placeholder="Your message here" class="form-control">@(Model)</textarea>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-12">
                <input type="submit" value="Submit" class="btn btn-outline-secondary" />
                <input type="reset" value="Reset" class="btn btn-outline-secondary" />
            </div>
        </div>
    </form>
</section>

@section Scripts {
    <script src="~/lib/toastr/build/toastr.min.js"></script>
    @if (ViewData[ContextKeys.Success] as bool? == true)
    {
        <script>
            toastr.success("Message sent");
        </script>
    }
    else if (ViewData[ContextKeys.Success] as bool? == false)
    {
        <script>
            toastr.error("Error in sending message");
        </script>
    }
}
