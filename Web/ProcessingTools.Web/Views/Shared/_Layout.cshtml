@using ProcessingTools.Web.Common.Constants
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="The description of my page" />
    <title>@this.ViewBag.Title - @ContentConstants.ApplicationName</title>
    @Styles.Render(BundleNames.DefaultStyleBundleName)
    @RenderSection(SectionNames.Styles, required: false)
    @Scripts.Render(BundleNames.ModernizrScriptBundleName)
</head>
<body>
    @Html.Partial(ProcessingTools.Web.Constants.ViewNames.DefaultNavigationBar)
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - @ContentConstants.CopyrightHolder</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/Site.js"></script>
    @*@Scripts.Render(BundleNames.DefaultScriptBundleName)*@
    @RenderSection(SectionNames.Scripts, required: false)
</body>
</html>
