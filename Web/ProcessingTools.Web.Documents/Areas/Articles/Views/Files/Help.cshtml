@using ProcessingTools.Web.Documents.App_GlobalResources
@{
    ViewBag.Title = Strings.HelpPageTitle;
}

<header>
    <h2>
        @Strings.HelpPageHeading
    </h2>
</header>

<hr />

<section>
    <h3>Keyboard shortcuts</h3>
    <section>
        <h4>View <em>@nameof(FilesController.Index)</em></h4>
        <dl class="dl-horizontal">
            <dt>U</dt>
            <dd>Upload new file.</dd>

            <dt>Home</dt>
            <dd>Go to first page.</dd>

            <dt>End</dt>
            <dd>Go to last page.</dd>

            <dt>Page Up</dt>
            <dd>Go to next page.</dd>

            <dt>Page Down</dt>
            <dd>Go to previous page.</dd>
        </dl>
    </section>
</section>

<hr />

<footer>
    <p>
        @Html.ActionLink(Strings.DefaultBackToListActionLinkTitle, nameof(FilesController.Index))
    </p>
</footer>
