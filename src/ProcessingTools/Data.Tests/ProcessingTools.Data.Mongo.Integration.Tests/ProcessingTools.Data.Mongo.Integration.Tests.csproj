<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netcoreapp2.2</TargetFramework>

    <IsPackable>false</IsPackable>

    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>

    <Version>0.1.1</Version>

    <Authors>Bozhin Karaivanov</Authors>

    <Company>ProcessingTools</Company>

    <Description>MongoDB data integration tests.</Description>

    <Copyright>Copyright © 2019 ProcessingTools</Copyright>

    <PackageLicenseUrl>https://www.tldrlegal.com/l/gpl-3.0</PackageLicenseUrl>

