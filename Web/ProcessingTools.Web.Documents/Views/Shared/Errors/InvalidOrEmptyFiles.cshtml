@using Strings = Resources.Strings

@model ProcessingTools.Web.Documents.ViewModels.Error.ErrorMetaViewModel

@{
    ViewBag.Title = Strings.InvalidOrEmptyFilePageTitle;
}

<h2 class="text-danger">
    @Model.ToString()
</h2>
<h3>@Strings.InvalidOrEmptyFilePageHeading</h3>

<ol>
    @foreach (string fileName in this.ViewBag.InvalidFiles)
    {
        <li class="text-danger">@fileName</li>
    }
</ol>

<p>@Strings.GoBackAndTryAgainMessage</p>
<p>
    @Html.ActionLink(
        Model.SourceAction.ActionLinkText,
        Model.SourceAction.ActionName,
        Model.SourceAction.ControllerName,
        routeValues: new { area = Model.SourceAction.AreaName },
        htmlAttributes: null)
</p>

@Html.Partial(ViewNames.ErrorFootPartialViewName)
