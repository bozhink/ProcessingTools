@model ProcessingTools.Web.Models.Documents.Documents.DocumentUploadViewModel
@{
    ViewData[ContextKeys.Title] = "Upload New Document";
    if (string.IsNullOrWhiteSpace(Model?.PageHeading))
    {
        string title = Html.DisplayNameFor(m => m.PageHeading);
        if (!string.IsNullOrWhiteSpace(title))
        {
            ViewData[ContextKeys.Title] = title;
        }
    }
    else
    {
        ViewData[ContextKeys.Title] = Model.PageHeading;
    }
}

<section role="main">
    <header>
        <h2>@ViewData[ContextKeys.Title]</h2>
        <h3>@(Model?.Article?.ArticleTitle) (@(Model?.Article?.JournalName))</h3>
    </header>
    <div asp-validation-summary="All" class="text-danger"></div>
    @if (Model == null)
    {
        <div class="alert alert-danger">Invalid view model.</div>
    }
    else
    {
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal" enctype="multipart/form-data">
            @Html.AntiForgeryToken()
            <div class="form-group">
                <div class="col-md-2">
                    <label asp-for="File" class="control-label"></label>
                </div>
                <div class="col-md-10">
                    <input type="file" asp-for="File" class="btn btn-default btn-file" accept=".xml, application/xml" placeholder="Select file" max="1" />
                </div>
            </div>
        
            <div class="form-group">
                <div class="col-md-12">
                    <input type="submit" class="btn btn-default" value="Submit" />
                    <input type="reset" class="btn btn-default" value="Reset" />
                    <a asp-action="@(DocumentsController.IndexActionName)" asp-route-returnUrl="@Model.ReturnUrl" class="btn btn-default">Cancel</a>
                </div>
            </div>
        </form>
    }
    <footer class="page-navigation">
        <p><a asp-action="@(DocumentsController.IndexActionName)">Back to List</a></p>
    </footer>
</section>

@section Scripts {
    @await Html.PartialAsync(ViewNames.ValidationScriptsPartial)
}

