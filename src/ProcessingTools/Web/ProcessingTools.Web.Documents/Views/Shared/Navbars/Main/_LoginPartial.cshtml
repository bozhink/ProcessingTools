@using Microsoft.AspNetCore.Identity
@using ProcessingTools.Web.Documents.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form class="form-inline my-2 my-lg-0" asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm">
        <ul class="navbar-nav">
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="accountNavbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" title="Account" aria-label="Account">
                    <span class="fa fa-user-circle-o"></span>
                    <span class="sr-only">(account)</span>
                    <span class="d-md-none ml-1">Account</span>
                </a>
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="accountNavbarDropdown">
                    <h6 class="dropdown-header">@UserManager.GetUserName(User)</h6>
                    <a class="dropdown-item" asp-area="@AreaNames.Default" asp-controller="@ManageController.ControllerName" asp-action="@ManageController.IndexActionName" title="Manage">Manage</a>
                    <a class="dropdown-item" asp-area="@AreaNames.Default" asp-controller="@ChatController.ControllerName" asp-action="@ChatController.IndexActionName" title="Chat">Chat</a>
                    <button role="button" type="submit" class="dropdown-item btn btn-link border-0">Log out</button>
                </div>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="navbar-nav">
        <li class="nav-item"><a class="nav-link" asp-area="@AreaNames.Default" asp-controller="@AccountController.ControllerName" asp-action="@AccountController.RegisterActionName">Register</a></li>
        <li class="nav-item"><a class="nav-link" asp-area="@AreaNames.Default" asp-controller="@AccountController.ControllerName" asp-action="@AccountController.LoginActionName">Log in</a></li>
    </ul>
}
