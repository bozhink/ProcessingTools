@model LoginWithRecoveryCodeViewModel
@{
    ViewData[ContextKeys.Title] = "Recovery code verification";
}

<section role="main" class="container">
    <header>
        <h2>@(ViewData[ContextKeys.Title])</h2>
    </header>
    <p>You have requested to login with a recovery code. This login will not be remembered until you provide
    an authenticator app code at login or disable 2FA and login again.</p>
    <div class="row">
        <section class="col-md-6">
            <form method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="RecoveryCode" class="sr-only"></label>
                    <input asp-for="RecoveryCode" class="form-control" autocomplete="off" placeholder="@Html.DisplayNameFor(m => m.RecoveryCode)" />
                    <span asp-validation-for="RecoveryCode" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary btn-block">Log in</button>
            </form>
        </section>
    </div>
</section>

@section Scripts {
    <partial name="@ViewNames.ValidationScriptsPartial" />
}
