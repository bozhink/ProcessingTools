@{
    this.ViewBag.Title = Model.PageTitle;
}

<h2>@Model.PageHeading</h2>

<div>
    <h4>Geo Name</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(m => m.Model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(m => m.Model.Name)
        </dd>

    </dl>
