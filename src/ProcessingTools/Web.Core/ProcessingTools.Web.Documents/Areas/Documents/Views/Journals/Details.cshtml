@model ProcessingTools.Web.Models.Documents.Journals.JournalDetailsViewModel
@{
    ViewData[ContextKeys.Title] = "Journal Details";
    if (string.IsNullOrWhiteSpace(Model?.PageHeading))
    {
        string title = Html.DisplayNameFor(m => m.PageHeading);
        if (!string.IsNullOrWhiteSpace(title))
        {
            ViewData[ContextKeys.Title] = title;
        }
    }
    else
    {
        ViewData[ContextKeys.Title] = Model.PageHeading;
    }
}

<section role="main">
    <header>
        <h2>@ViewData[ContextKeys.Title]</h2>
    </header>
    <div asp-validation-summary="All" class="text-danger"></div>
    @if (Model == null)
    {
        <div class="alert alert-danger">Invalid view model.</div>
    }
    else
    {
        <dl class="dl-horizontal">
            <dt>@Html.DisplayNameFor(m => m.Name)</dt>
            <dd>@Html.DisplayFor(m => m.Name)</dd>

            <dt>@Html.DisplayNameFor(m => m.AbbreviatedName)</dt>
            <dd>@Html.DisplayFor(m => m.AbbreviatedName)</dd>

            <dt>@Html.DisplayNameFor(m => m.JournalId)</dt>
            <dd>@Html.DisplayFor(m => m.JournalId)</dd>

            <dt>@Html.DisplayNameFor(m => m.PrintIssn)</dt>
            <dd>@Html.DisplayFor(m => m.PrintIssn)</dd>

            <dt>@Html.DisplayNameFor(m => m.ElectronicIssn)</dt>
            <dd>@Html.DisplayFor(m => m.ElectronicIssn)</dd>

            <dt>@Html.DisplayNameFor(m => m.Publisher.Name)</dt>
            <dd>@Html.DisplayFor(m => m.Publisher.Name)</dd>

            <dt>@Html.DisplayNameFor(m => m.CreatedBy)</dt>
            <dd>@Html.DisplayFor(m => m.CreatedBy)</dd>

            <dt>@Html.DisplayNameFor(m => m.CreatedOn)</dt>
            <dd>@Html.DisplayFor(m => m.CreatedOn)</dd>

            <dt>@Html.DisplayNameFor(m => m.ModifiedBy)</dt>
            <dd>@Html.DisplayFor(m => m.ModifiedBy)</dd>

            <dt>@Html.DisplayNameFor(m => m.ModifiedOn)</dt>
            <dd>@Html.DisplayFor(m => m.ModifiedOn)</dd>
        </dl>
        <div>
            <a asp-action="@(JournalsController.IndexActionName)" asp-route-returnUrl="@Model.ReturnUrl" class="btn btn-default">Cancel</a>
        </div>
    }
    <footer class="page-navigation">
        <p><a asp-action="@(JournalsController.IndexActionName)">Back to List</a></p>
    </footer>
</section>
