@{ 
    Layout = "/Views/Shared/_Layout.cshtml";
}

<section role="main" class="container">
    <header>
        <h2>Manage your account</h2>
    </header>
    <section>
        <header>
            <h4>Change your account settings</h4>
        </header>
        <hr />
        <div class="row">
            <div class="col-md-3">
                @await Html.PartialAsync("_ManageNav")
            </div>
            <div class="col-md-9">
                @RenderBody()
            </div>
        </div>
    </section>
</section>

@section Scripts {
    @RenderSection("Scripts", required: false)
}
