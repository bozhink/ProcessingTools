@model ProcessingTools.Web.Models.Documents.Journals.JournalsIndexViewModel

@{
    ViewData[ContextKeys.Title] = "Journals";
    if (string.IsNullOrWhiteSpace(Model?.PageHeading))
    {
        string title = Html.DisplayNameFor(m => m.PageHeading);
        if (!string.IsNullOrWhiteSpace(title))
        {
            ViewData[ContextKeys.Title] = title;
        }
    }
    else
    {
        ViewData[ContextKeys.Title] = Model.PageHeading;
    }
}

<section role="main">
    <header>
        <h2>@ViewData[ContextKeys.Title]</h2>
    </header>
    @if (Model == null)
    {
        <div class="alert alert-info">No items found.</div>
    }
    else
    {
        <p><a asp-action="@(JournalsController.CreateActionName)">Create New Journal</a></p>
        @if (Model.Items != null && Model.Items.Any())
        {
            <table class="table">
                <thead>
                    <tr>
                        <th></th>
                        <th>@Html.DisplayNameFor(m => m.Items.First().Name)</th>
                        <th>@Html.DisplayNameFor(m => m.Items.First().AbbreviatedName)</th>
                        <th>@Html.DisplayNameFor(m => m.Items.First().PrintIssn)</th>
                        <th>@Html.DisplayNameFor(m => m.Items.First().ElectronicIssn)</th>
                        <th>@Html.DisplayNameFor(m => m.Items.First().Publisher.Name)</th>
                        <th>@Html.DisplayNameFor(m => m.Items.First().NumberOfArticles)</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @{ int i = 0; }
                    @foreach (var item in Model.Items)
                    {
                        <tr>
                            <td>@(++i)</td>
                            <td>@Html.DisplayFor(m => item.Name)</td>
                            <td>@Html.DisplayFor(m => item.AbbreviatedName)</td>
                            <td>@Html.DisplayFor(m => item.PrintIssn)</td>
                            <td>@Html.DisplayFor(m => item.ElectronicIssn)</td>
                            <td>@Html.DisplayFor(m => item.Publisher.Name)</td>
                            <td>@Html.DisplayFor(m => item.NumberOfArticles)</td>
                            <td>
                                <a asp-action="@(JournalsController.EditActionName)" asp-route-id="@(item.Id)">Edit</a> |
                                <a asp-action="@(JournalsController.DeleteActionName)" asp-route-id="@(item.Id)">Delete</a> |
                                <a asp-action="@(JournalsController.DetailsActionName)" asp-route-id="@(item.Id)">Details</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <footer>
                @await Html.PartialAsync(ViewNames.NavigationFootPartial)
            </footer>
        }
    }
</section>

@section Scripts {
    @await Html.PartialAsync(ViewNames.PaginationScriptsPartial)
}
