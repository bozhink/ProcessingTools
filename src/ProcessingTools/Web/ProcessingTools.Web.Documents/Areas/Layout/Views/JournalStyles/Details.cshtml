@model ProcessingTools.Web.Models.Layout.Styles.Journals.JournalStyleDetailsViewModel
@{
    ViewData[ContextKeys.Title] = "Journal Style Details";
    if (string.IsNullOrWhiteSpace(Model?.PageHeading))
    {
        string title = Html.DisplayNameFor(m => m.PageHeading);
        if (!string.IsNullOrWhiteSpace(title))
        {
            ViewData[ContextKeys.Title] = title;
        }
    }
    else
    {
        ViewData[ContextKeys.Title] = Model.PageHeading;
    }
}

<section role="main" class="container">
    <header>
        <h2>@ViewData[ContextKeys.Title]</h2>
    </header>
    <div asp-validation-summary="All" class="text-danger"></div>
    @if (Model is null)
    {
        <div class="alert alert-danger">Invalid view model.</div>
    }
    else
    {
        <dl class="row">
            <dt class="col-md-2 bold">@Html.DisplayNameFor(m => m.Name)</dt>
            <dd class="col-md-10">@Html.DisplayFor(m => m.Name)</dd>

            <dt class="col-md-2 bold">@Html.DisplayNameFor(m => m.Description)</dt>
            <dd class="col-md-10">@Html.DisplayFor(m => m.Description)</dd>

            <dt class="col-md-2 bold">@Html.DisplayNameFor(m => m.FloatObjectParseStyles)</dt>
            <dd class="col-md-10">
                @if (Model.FloatObjectParseStyles?.Any() == true)
                {
                    <ol>
                        @foreach (var style in Model.FloatObjectParseStyles)
                        {
                            <li>@(style.Name)</li>
                        }
                    </ol>
                }
            </dd>

            <dt class="col-md-2 bold">@Html.DisplayNameFor(m => m.FloatObjectTagStyles)</dt>
            <dd class="col-md-10">
                @if (Model.FloatObjectTagStyles?.Any() == true)
                {
                    <ol>
                        @foreach (var style in Model.FloatObjectTagStyles)
                        {
                            <li>@(style.Name)</li>
                        }
                    </ol>
                }
            </dd>

            <dt class="col-md-2 bold">@Html.DisplayNameFor(m => m.ReferenceParseStyles)</dt>
            <dd class="col-md-10">
                @if (Model.ReferenceParseStyles?.Any() == true)
                {
                    <ol>
                        @foreach (var style in Model.ReferenceParseStyles)
                        {
                            <li>@(style.Name)</li>
                        }
                    </ol>
                }
            </dd>

            <dt class="col-md-2 bold">@Html.DisplayNameFor(m => m.ReferenceTagStyles)</dt>
            <dd class="col-md-10">
                @if (Model.ReferenceTagStyles?.Any() == true)
                {
                    <ol>
                        @foreach (var style in Model.ReferenceTagStyles)
                        {
                            <li>@(style.Name)</li>
                        }
                    </ol>
                }
            </dd>

            <dt class="col-md-2 bold">@Html.DisplayNameFor(m => m.CreatedBy)</dt>
            <dd class="col-md-10">@Html.DisplayFor(m => m.CreatedBy)</dd>

            <dt class="col-md-2 bold">@Html.DisplayNameFor(m => m.CreatedOn)</dt>
            <dd class="col-md-10">@Html.DisplayFor(m => m.CreatedOn)</dd>

            <dt class="col-md-2 bold">@Html.DisplayNameFor(m => m.ModifiedBy)</dt>
            <dd class="col-md-10">@Html.DisplayFor(m => m.ModifiedBy)</dd>

            <dt class="col-md-2 bold">@Html.DisplayNameFor(m => m.ModifiedOn)</dt>
            <dd class="col-md-10">@Html.DisplayFor(m => m.ModifiedOn)</dd>
        </dl>
        <div class="row">
            <div class="col-md-12">
                <a asp-action="@(JournalStylesController.IndexActionName)" asp-route-returnUrl="@Model.ReturnUrl" class="btn btn-outline-secondary">Cancel</a>
            </div>
        </div>
    }
    <footer class="page-navigation">
        <p><a asp-action="@(JournalStylesController.IndexActionName)">Back to List</a></p>
    </footer>
</section>
