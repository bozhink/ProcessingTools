@model ProcessingTools.Web.Models.Layout.Styles.References.ReferenceTagStyleDetailsViewModel
@{
    ViewData[ContextKeys.Title] = "Reference Tag Style Details";
    if (string.IsNullOrWhiteSpace(Model?.PageHeading))
    {
        string title = Html.DisplayNameFor(m => m.PageHeading);
        if (!string.IsNullOrWhiteSpace(title))
        {
            ViewData[ContextKeys.Title] = title;
        }
    }
    else
    {
        ViewData[ContextKeys.Title] = Model.PageHeading;
    }
}

<section role="main">
    <header>
        <h2>@ViewData[ContextKeys.Title]</h2>
    </header>
    <div asp-validation-summary="All" class="text-danger"></div>
    @if (Model == null)
    {
        <div class="alert alert-danger">Invalid view model.</div>
    }
    else
    {
        <dl class="dl-horizontal">
            <dt>@Html.DisplayNameFor(m => m.Name)</dt>
            <dd>@Html.DisplayFor(m => m.Name)</dd>

            <dt>@Html.DisplayNameFor(m => m.Description)</dt>
            <dd>@Html.DisplayFor(m => m.Description)</dd>

            <dt>@Html.DisplayNameFor(m => m.Script)</dt>
            <dd>@Html.DisplayFor(m => m.Script)</dd>

            <dt>@Html.DisplayNameFor(m => m.ReferenceXPath)</dt>
            <dd>@Html.DisplayFor(m => m.ReferenceXPath)</dd>

            <dt>@Html.DisplayNameFor(m => m.TargetXPath)</dt>
            <dd>@Html.DisplayFor(m => m.TargetXPath)</dd>

            <dt>@Html.DisplayNameFor(m => m.CreatedBy)</dt>
            <dd>@Html.DisplayFor(m => m.CreatedBy)</dd>

            <dt>@Html.DisplayNameFor(m => m.CreatedOn)</dt>
            <dd>@Html.DisplayFor(m => m.CreatedOn)</dd>

            <dt>@Html.DisplayNameFor(m => m.ModifiedBy)</dt>
            <dd>@Html.DisplayFor(m => m.ModifiedBy)</dd>

            <dt>@Html.DisplayNameFor(m => m.ModifiedOn)</dt>
            <dd>@Html.DisplayFor(m => m.ModifiedOn)</dd>
        </dl>
        <div>
            <a asp-action="@(ReferenceTagStylesController.IndexActionName)" asp-route-returnUrl="@Model.ReturnUrl" class="btn btn-default">Cancel</a>
        </div>
    }
    <footer class="page-navigation">
        <p><a asp-action="@(ReferenceTagStylesController.IndexActionName)">Back to List</a></p>
    </footer>
</section>
