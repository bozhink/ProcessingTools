@model ProcessingTools.Web.Common.ViewModels.ListWithPagingViewModel<ProcessingTools.Web.Documents.Areas.Journals.ViewModels.Publishers.PublisherViewModel>

@{
    ViewBag.Title = "List of Publishers";
}

<header>
    <h2>List of Publishers</h2>
</header>

<p>
    @Html.ActionLink("Add New Publisher", nameof(PublishersController.Create))
</p>

@if (Model.Items.Count() > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th></th>
                <th>
                    @Html.DisplayNameFor(model => model.Items.First().Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Items.First().AbbreviatedName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Items.First().DateCreated)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Items.First().DateModified)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @{
                int counter = 0;
                foreach (var item in Model.Items)
                {
                    ++counter;
                    <tr>
                        <td>
                            @counter
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AbbreviatedName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DateCreated)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DateModified)
                        </td>
                        <td class="separated-items">
                            <span class="item">
                                @Html.ActionLink(ContentConstants.DefaultEditActionLinkTitle, nameof(PublishersController.Edit), new { id = item.Id })
                            </span>
                            <span class="item">
                                @Html.ActionLink(Resources.Strings.DefaultDetailsActionLinkTitle, nameof(PublishersController.Details), new { id = item.Id })
                            </span>
                            <span class="item">
                                @Html.ActionLink(ContentConstants.DefaultDeleteActionLinkTitle, nameof(PublishersController.Delete), new { id = item.Id })
                            </span>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>

    <footer>
        @Html.Partial(ViewNames.NavigationFootPartialViewName)
    </footer>
}
