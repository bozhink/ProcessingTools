@using Strings = Resources.Strings

@model ProcessingTools.Web.Documents.ViewModels.Error.ErrorMetaViewModel

@{
    ViewBag.Title = Strings.NoFilesSelectedPageTitle;
}

<h2 class="text-danger">
    @Model.ToString()
</h2>
<h3>@Strings.NoFilesSelectedPageHeading</h3>

<p>@Strings.GoBackAndTryAgainMessage</p>
<p>
    @Html.ActionLink(
        linkText: Model.SourceAction.ActionLinkText,
        actionName: Model.SourceAction.ActionName,
        controllerName: Model.SourceAction.ControllerName,
        routeValues: new { area = Model.SourceAction.AreaName},
        htmlAttributes: null)
</p>

@Html.Partial(ViewNames.ErrorFootPartialViewName)
