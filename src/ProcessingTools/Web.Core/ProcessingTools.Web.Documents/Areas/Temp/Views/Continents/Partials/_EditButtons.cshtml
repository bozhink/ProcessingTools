@using ProcessingTools.Web.Constants
@using Strings = ProcessingTools.Web.Resources.Views.Shared.Strings;
@model ProcessingTools.Web.Models.Geo.Continents.ContinentPageViewModel
@{ 
    string actionName = this.ViewData[ContextKeys.ActionName].ToString();
    string backActionName = this.ViewData[ContextKeys.BackActionName].ToString();
    string controllerName = this.ViewData[ContextKeys.ControllerName].ToString();
    string areaName = this.ViewData[ContextKeys.AreaName].ToString();
}
@Html.Partial(ViewNames.SharedEditButtonsPartial, new ProcessingTools.Web.Models.Shared.EditButtonsViewModel
{
    ButtonSaveIsVisible = true,
    ButtonSaveText = Strings.ButtonSaveText,
    ButtonSaveRoute = new ProcessingTools.Web.Models.Shared.RouteViewModel
    {
        ActionName = actionName,
        ControllerName = controllerName,
        RouteValues = new
        {
            area = areaName,
            id = Model?.Model?.Id
        }
    },

    ButtonSaveAndExitIsVisible = true,
    ButtonSaveAndExitText = Strings.ButtonSaveAndExitText,
    ButtonSaveAndExitRoute = new ProcessingTools.Web.Models.Shared.RouteViewModel
    {
        ActionName = actionName,
        ControllerName = controllerName,
        RouteValues = new
        {
            area = areaName,
            id = Model?.Model?.Id,
            exit = true
        }
    },

    ButtonSaveAndNewIsVisible = true,
    ButtonSaveAndNewText = Strings.ButtonSaveAndNewText,
    ButtonSaveAndNewRoute = new ProcessingTools.Web.Models.Shared.RouteViewModel
    {
        ActionName = actionName,
        ControllerName = controllerName,
        RouteValues = new
        {
            area = areaName,
            id = Model?.Model?.Id,
            createNew = true
        }
    },

    ButtonCancelIsVisible = true,
    ButtonCancelText = Strings.ButtonCancelText,
    ButtonCancelRoute = new ProcessingTools.Web.Models.Shared.RouteViewModel
    {
        ActionName = backActionName,
        ControllerName = controllerName,
        RouteValues = new
        {
            returnUrl = Model.ReturnUrl
        }
    },

    ButtonResetIsVisible = true,
    ButtonResetText = Strings.ButtonResetText,
    ButtonResetRoute = null
})