
@model ProcessingTools.Web.Models.Tools.Coordinates.CoordinatesViewModel

@{
    ViewData[ContextKeys.Title] = "Coordinates Calculator";
}

<section role="main">
    <header>
        <h2>@ViewData[ContextKeys.Title]</h2>
    </header>
    <div class="row">
        <div class="col-md-6">
            <fieldset>
                <legend>Coordinates</legend>
                <form method="post" class="container">
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, string.Empty, new { @class = "text-danger" })
                    <div class="form-group row">
                        <div class="col-md-12">
                            <textarea type="text" asp-for="Coordinates" cols="30" rows="4" placeholder="Insert coordinates here" class="form-control"></textarea>
                            <span asp-validation-for="Coordinates" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-12">
                            <input type="submit" value="Submit" class="btn btn-outline-secondary" />
                            <input type="reset" value="Reset" class="btn btn-outline-secondary" />
                        </div>
                    </div>
                </form>
            </fieldset>
        </div>
        @if (Model != null && Model.Coordinates.Any())
        {
            <div class="col-md-6">
                <fieldset>
                    <legend>Calculated Coordinates</legend>
                    <dl>
                        @foreach (var coordinate in Model.Coordinates)
                        {
                            <dt>@coordinate.Coordinate</dt>
                            <dd>[@coordinate.Latitude, @coordinate.Longitude]</dd>
                        }
                    </dl>
                </fieldset>
            </div>
        }
    </div>
</section>

@section Scripts {
    <partial name="@ViewNames.ValidationScriptsPartial" />
}
