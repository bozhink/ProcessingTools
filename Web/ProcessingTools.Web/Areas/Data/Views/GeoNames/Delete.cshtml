@using ProcessingTools.Web.Areas.Data.Controllers
@using ProcessingTools.Web.Areas.Data.ViewModels.GeoNames
@model GeoNamePageViewModel

@{
    this.ViewBag.Title = Model.PageTitle;
}

<h2>@Model.PageHeading</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Geo Name</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(m => m.Model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(m => m.Model.Name)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.Model.Id)

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" />
            @Html.ActionLink("Cancel", GeoNamesController.IndexActionName, routeValues: new { returnUrl = Model.ReturnUrl }, htmlAttributes: new { @class = "btn btn-default" })
        </div>
    }
</div>

<div>
    @Html.ActionLink("Back to List", GeoNamesController.IndexActionName, routeValues: new { returnUrl = Model.ReturnUrl })
</div>
