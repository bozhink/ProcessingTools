    <header>
        <h2>@ViewData[ContextKeys.Title]</h2>
    </header>
    <div asp-validation-summary="All" class="text-danger"></div>
    @if (Model == null)
    {
        <div class="alert alert-danger">Invalid view model.</div>
    }
    else
    {
        <dl class="row">
            <dt class="col-md-2 bold">@Html.DisplayNameFor(m => m.Name)</dt>
            <dd class="col-md-10">@Html.DisplayFor(m => m.Name)</dd>

            <dt class="col-md-2 bold">@Html.DisplayNameFor(m => m.Description)</dt>
            <dd class="col-md-10">@Html.DisplayFor(m => m.Description)</dd>

            <dt class="col-md-2 bold">@Html.DisplayNameFor(m => m.FloatReferenceType)</dt>
            <dd class="col-md-10">@Html.DisplayFor(m => m.FloatReferenceType)</dd>

            <dt class="col-md-2 bold">@Html.DisplayNameFor(m => m.FloatTypeNameInLabel)</dt>
            <dd class="col-md-10">@Html.DisplayFor(m => m.FloatTypeNameInLabel)</dd>

            <dt class="col-md-2 bold">@Html.DisplayNameFor(m => m.MatchCitationPattern)</dt>
            <dd class="col-md-10">@Html.DisplayFor(m => m.MatchCitationPattern)</dd>

            <dt class="col-md-2 bold">@Html.DisplayNameFor(m => m.InternalReferenceType)</dt>
            <dd class="col-md-10">@Html.DisplayFor(m => m.InternalReferenceType)</dd>

            <dt class="col-md-2 bold">@Html.DisplayNameFor(m => m.ResultantReferenceType)</dt>
            <dd class="col-md-10">@Html.DisplayFor(m => m.ResultantReferenceType)</dd>

            <dt class="col-md-2 bold">@Html.DisplayNameFor(m => m.FloatObjectXPath)</dt>
            <dd class="col-md-10">@Html.DisplayFor(m => m.FloatObjectXPath)</dd>

            <dt class="col-md-2 bold">@Html.DisplayNameFor(m => m.TargetXPath)</dt>
            <dd class="col-md-10">@Html.DisplayFor(m => m.TargetXPath)</dd>

            <dt class="col-md-2 bold">@Html.DisplayNameFor(m => m.CreatedBy)</dt>
            <dd class="col-md-10">@Html.DisplayFor(m => m.CreatedBy)</dd>

            <dt class="col-md-2 bold">@Html.DisplayNameFor(m => m.CreatedOn)</dt>
            <dd class="col-md-10">@Html.DisplayFor(m => m.CreatedOn)</dd>

            <dt class="col-md-2 bold">@Html.DisplayNameFor(m => m.ModifiedBy)</dt>
            <dd class="col-md-10">@Html.DisplayFor(m => m.ModifiedBy)</dd>

            <dt class="col-md-2 bold">@Html.DisplayNameFor(m => m.ModifiedOn)</dt>
            <dd class="col-md-10">@Html.DisplayFor(m => m.ModifiedOn)</dd>
        </dl>
        <div class="row">
            <div class="col-md-12">
                <a asp-action="@(FloatObjectTagStylesController.IndexActionName)" asp-route-returnUrl="@Model.ReturnUrl" class="btn btn-outline-secondary">Cancel</a>
            </div>
        </div>
    }
    <footer class="page-navigation">
        <p><a asp-action="@(FloatObjectTagStylesController.IndexActionName)">Back to List</a></p>
    </footer>
</section>
