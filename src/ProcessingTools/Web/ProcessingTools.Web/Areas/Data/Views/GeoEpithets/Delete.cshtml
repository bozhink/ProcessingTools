@using Strings = ProcessingTools.Web.Areas.Data.Resources.GeoEpithets.Views_Strings
@model ProcessingTools.Web.Areas.Data.Models.GeoEpithets.GeoEpithetPageViewModel
@{
    this.ViewBag.Title = Model.PageTitle;
}

<header>
    <h2>@Model.PageHeading</h2>
    <h3>@Strings.DeleteMessage</h3>
</header>
<hr />
<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(m => m.Model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(m => m.Model.Name)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.Model.Id)

        <div class="form-actions no-color">
            <input type="submit" value="@Strings.DeleteButtonText" class="btn btn-danger" />
            @Html.ActionLink(Strings.CancelButtonText, GeoEpithetsController.IndexActionName, routeValues: new { returnUrl = Model.ReturnUrl }, htmlAttributes: new { @class = "btn btn-default" })
        </div>
    }
</div>

<div>
    @Html.ActionLink(Strings.BackToListActionLinkText, GeoEpithetsController.IndexActionName, routeValues: new { returnUrl = Model.ReturnUrl })
</div>
