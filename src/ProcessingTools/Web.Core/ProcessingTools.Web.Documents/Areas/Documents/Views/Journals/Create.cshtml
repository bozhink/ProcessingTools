@model ProcessingTools.Web.Models.Documents.Journals.JournalCreateViewModel
@{
    ViewData[ContextKeys.Title] = "Create New Journal";
    if (string.IsNullOrWhiteSpace(Model?.PageHeading))
    {
        string title = Html.DisplayNameFor(m => m.PageHeading);
        if (!string.IsNullOrWhiteSpace(title))
        {
            ViewData[ContextKeys.Title] = title;
        }
    }
    else
    {
        ViewData[ContextKeys.Title] = Model.PageHeading;
    }
}

<section role="main">
    <header>
        <h2>@ViewData[ContextKeys.Title]</h2>
    </header>
    <div asp-validation-summary="All" class="text-danger"></div>
    @if (Model == null)
    {
        <div class="alert alert-danger">Invalid view model.</div>
    }
    else
    {
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
            <div class="form-group">
                <div class="col-md-2">
                    <label asp-for="Name" class="control-label"></label>
                </div>
                <div class="col-md-10">
                    <input type="text" asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-2">
                    <label asp-for="AbbreviatedName" class="control-label"></label>
                </div>
                <div class="col-md-10">
                    <input type="text" asp-for="AbbreviatedName" class="form-control" />
                    <span asp-validation-for="AbbreviatedName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-2">
                    <label asp-for="JournalId" class="control-label"></label>
                </div>
                <div class="col-md-10">
                    <input type="text" asp-for="JournalId" class="form-control" />
                    <span asp-validation-for="JournalId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-2">
                    <label asp-for="PrintIssn" class="control-label"></label>
                </div>
                <div class="col-md-10">
                    <input type="text" asp-for="PrintIssn" class="form-control" />
                    <span asp-validation-for="PrintIssn" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-2">
                    <label asp-for="ElectronicIssn" class="control-label"></label>
                </div>
                <div class="col-md-10">
                    <input type="text" asp-for="ElectronicIssn" class="form-control" />
                    <span asp-validation-for="ElectronicIssn" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-2">
                    <label asp-for="PublisherId" class="control-label"></label>
                </div>
                <div class="col-md-10">
                    <select asp-for="PublisherId" class="form-control">
                        @if (Model.Publishers != null && Model.Publishers.Any())
                        {
                            foreach (var publisher in Model.Publishers)
                            {
                                <option value="@publisher.Id">@publisher.Name</option>
                            }
                        }
                    </select>
                    <span asp-validation-for="PublisherId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-12">
                    <input type="submit" class="btn btn-default" value="Save" />
                    <input type="reset" class="btn btn-default" value="Reset" />
                    <a asp-action="@(PublishersController.IndexActionName)" asp-route-returnUrl="@Model.ReturnUrl" class="btn btn-default">Cancel</a>
                </div>
            </div>
        </form>
    }
    <footer class="page-navigation">
        <p><a asp-action="@(PublishersController.IndexActionName)">Back to List</a></p>
    </footer>
</section>

@section Scripts {
    @await Html.PartialAsync(ViewNames.ValidationScriptsPartial)
}
